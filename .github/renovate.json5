{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  assignees: [
    "rnett"
  ],
  "pruneStaleBranches": false,
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "org.jetbrains.kotlin:kotlin-gradle-plugin",
        "com.google.devtools.ksp:symbol-processing-api"
      ],
      groupName: "kotlin",
      labels: [
        "kotlin"
      ],
      branchPrefix: "kotlin-update/",
      "allowedVersions": "/.*/",
      "ignoreUnstable": false,
      automerge: false,
      draftPR: true,
      baseBranchPatterns: [
        "main",
        "renovate/kotlin",
        "kotlin-update/*"
      ]
    }
  ]
}